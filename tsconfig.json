{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": false,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "lib"
    },
    "exclude": [
        "node_modules",
        "doc",
        "tests"
    ]
}